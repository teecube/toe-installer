<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/DECORATION/1.3.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

	<body>
		<menu name="${toeName} - ${toeInstallerName}">
			<item name="Plugin documentation" href="./plugin-info.html" />
			<item name="Full environment installation" href="./environments.html" />
			<item name="#reports" />
			<item name="#infos" />
		</menu>

		<menu name="Documentation" ref="reports"></menu>

		<menu name="${ecosystemName}">
			<item name="Plugins list" href="${siteURL}/default-versions.html" />
			<item name="" />
			<item name="${ticName}" href="${siteDisplayURL}/${ticURLBase}/index.html" />
			<item name="${tacName}" href="${siteDisplayURL}/${tacURLBase}/index.html" />
			<item name="${toeName}" href="${siteDisplayURL}/${toeURLBase}/index.html" />
		</menu>
	</body>

	<custom>
		<reflowSkin>
			<protocolRelativeURLs>false</protocolRelativeURLs>
			<absoluteResourceURL>${siteURL}</absoluteResourceURL>

			<slogan><![CDATA[${toeSlogan}]]></slogan>

			<bottomNav maxSpan="9">
				<column>${toeName} - ${toeInstallerName}</column>
				<column>Documentation</column>
				<column>${ecosystemName}</column>
			</bottomNav>

			<bottomDescription>
				<![CDATA[
				${ecosystemSumUp}
				]]>
			</bottomDescription>

			<pages>
				<index>
					<sections>
						<body />
						<sidebar />
					</sections>
				</index>
				<environments>
					<sections>
						<body />
						<sidebar />
					</sections>
				</environments>
			</pages>
		</reflowSkin>
	</custom>

	<bannerLeft>
		<name>
          <![CDATA[
          ${toeDisplayedName} - ${toeDisplayedInstallerName}
          ]]>
		</name>
		<href>./index.html</href>
	</bannerLeft>

</project>