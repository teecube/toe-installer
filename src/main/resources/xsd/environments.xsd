<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns="http://teecu.be/toe-installer/environments"
	targetNamespace="http://teecu.be/toe-installer/environments" xmlns:vc="http://www.w3.org/2007/XMLSchema-versioning"
	elementFormDefault="qualified" attributeFormDefault="unqualified">

	<!-- Products -->
	<xs:simpleType name="ProductType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="admin" />
			<xs:enumeration value="bw5" />
			<xs:enumeration value="bw6" />
			<xs:enumeration value="ems" />
			<xs:enumeration value="rv" />
			<xs:enumeration value="tea" />
			<xs:enumeration value="tra" />
		</xs:restriction>
	</xs:simpleType>

	<xs:complexType name="Property">
		<xs:sequence>
			<xs:element name="key" type="xs:string"/>
			<xs:element name="value" type="xs:string"/>
		</xs:sequence>
	</xs:complexType>

	<!-- Packages -->
	<xs:complexType name="AbstractPackage" abstract="true">
		<xs:sequence>
			<xs:choice>
				<xs:element name="local" type="LocalPackage"/>
				<xs:element name="remote" type="AbstractRemotePackage"/>
			</xs:choice>
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="LocalPackage">
		<xs:sequence>
			<xs:choice>
				<xs:element name="fileWithVersion" type="LocalFileWithVersion"/>
				<xs:element name="directoryWithPattern" type="LocalPackagePattern"/>
			</xs:choice>
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="LocalFileWithVersion">
		<xs:sequence>
			<xs:element name="file" type="xs:string" />
			<xs:element name="version" type="xs:string" />
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="LocalPackagePattern">
		<xs:sequence>
			<xs:element name="directory" type="xs:string" minOccurs="0" /> <!-- minOccurs=0 because the /environment/packagesDirectory can be used instead  -->
			<xs:element name="pattern" type="xs:string" minOccurs="0" />
			<xs:element name="versionGroupIndex" type="xs:int" minOccurs="0" />
			<xs:element name="archGroupIndex" type="xs:int" minOccurs="0" />
			<xs:element name="osGroupIndex" type="xs:int" minOccurs="0" />
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="AbstractRemotePackage" abstract="true"/>

	<xs:complexType name="HttpRemotePackage">
		<xs:complexContent>
			<xs:extension base="AbstractRemotePackage">
				<xs:sequence>
					<xs:element name="url" type="xs:string"/>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:complexType name="MavenArtifactPackage">
		<xs:complexContent>
			<xs:extension base="AbstractRemotePackage">
				<xs:sequence>
					<xs:element name="groupId" type="xs:string"/>
					<xs:element name="artifactId" type="xs:string"/>
					<xs:element name="version" type="xs:string"/>
					<xs:element name="packaging" type="xs:string"/>
					<xs:element name="classifier" type="xs:string" minOccurs="0"/>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:complexType name="MavenTIBCOArtifactPackage">
		<xs:complexContent>
			<xs:extension base="AbstractRemotePackage">
				<xs:sequence>
					<xs:element name="groupId" type="xs:string" minOccurs="0"/>
					<xs:element name="artifactId" type="xs:string" minOccurs="0"/>
					<xs:element name="version" type="xs:string"/>
					<xs:element name="packaging" type="xs:string" minOccurs="0"/>
					<xs:element name="classifier" type="xs:string"/>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:simpleType name="IfProductExistsBehaviour">
		<xs:restriction base="xs:string">
			<xs:enumeration value="delete" />
			<xs:enumeration value="fail" />
			<xs:enumeration value="keep" />
		</xs:restriction>
	</xs:simpleType>

	<xs:complexType name="Product" abstract="true">
		<xs:sequence>
			<xs:element name="preInstallCommands" minOccurs="0" type="Commands">
				<xs:annotation>
					<xs:documentation>Pre-install commands of a product are executed before the installation of the product.</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="package" minOccurs="1">
				<xs:complexType>
					<xs:choice>
						<xs:element name="httpRemote" type="HttpRemotePackage"/>
						<xs:element name="mavenArtifact" type="MavenArtifactPackage"/>
						<xs:element name="mavenTIBCOArtifact" type="MavenTIBCOArtifactPackage"/>
						<xs:element name="local" type="LocalPackage"/>
					</xs:choice>
				</xs:complexType>
			</xs:element>
			<xs:element name="properties" minOccurs="0">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="property" type="Property" minOccurs="0" maxOccurs="unbounded"/>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
			<xs:element name="postInstallCommands" minOccurs="0" type="Commands">
				<xs:annotation>
					<xs:documentation>Post-install commands of a product are executed after the installation of the product.</xs:documentation>
				</xs:annotation>
			</xs:element>
		</xs:sequence>
		<xs:attribute name="id" type="xs:string" use="optional"/>
		<xs:attribute name="priority" type="xs:int" use="optional"/>
		<xs:attribute name="skip" type="xs:boolean" use="optional" default="false"/>
		<xs:attribute name="ifExists" type="IfProductExistsBehaviour" default="keep" />
	</xs:complexType>

	<xs:complexType name="TIBCOProduct">
		<xs:complexContent>
			<xs:extension base="Product">
				<xs:sequence>
					<xs:element name="hotfixes" minOccurs="0">
						<xs:complexType>
							<xs:sequence>
								<xs:element name="hotfix" type="xs:string"/>
							</xs:sequence>
						</xs:complexType>
					</xs:element>
				</xs:sequence>
				<xs:attribute name="name" type="xs:string" use="optional" default="@type"/>
				<xs:attribute name="type" type="ProductType" use="required"/>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:complexType name="CustomProduct">
		<xs:complexContent>
			<xs:extension base="Product">
				<xs:sequence>
					<xs:choice minOccurs="1" maxOccurs="unbounded">
						<xs:element name="antCommand" type="AntCommand"/>
						<xs:element name="mavenCommand" type="MavenCommand"/>
						<xs:element name="systemCommand" type="SystemCommand"/>
						<xs:element name="uncompressCommand" type="UncompressCommand"/>
					</xs:choice>
				</xs:sequence>
				<xs:attribute name="name" type="xs:string" use="required"/>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<!-- Commands -->
	<xs:complexType name="AbstractCommand" abstract="true">
		<xs:attribute name="id" type="xs:string" use="optional" />
		<xs:attribute name="name" type="xs:string" use="optional" />
		<xs:attribute name="description" type="xs:string" use="optional" />
		<xs:attribute name="onError" type="CommandOnErrorBehaviour" default="fail" />
		<xs:attribute name="skip" type="xs:boolean" use="optional" default="false" />
		<xs:attribute name="workingDirectory" type="xs:string" use="optional" />
	</xs:complexType>

	<xs:complexType name="AntCommand">
		<xs:complexContent>
			<xs:extension base="AbstractCommand">
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:complexType name="MavenCommand">
		<xs:complexContent>
			<xs:extension base="AbstractCommand">
				<xs:sequence>
					<xs:element name="goals" type="xs:string"/>
					<xs:element name="arguments" minOccurs="0">
						<xs:complexType>
							<xs:sequence>
								<xs:element name="argument" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
							</xs:sequence>
						</xs:complexType>
					</xs:element>
					<xs:element name="profiles" minOccurs="0">
						<xs:complexType>
							<xs:sequence>
								<xs:element name="profile" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
							</xs:sequence>
						</xs:complexType>
					</xs:element>
				</xs:sequence>
				<xs:attribute name="enableDebugOutput" type="xs:boolean" default="false"/>
				<xs:attribute name="nonRecursive" type="xs:boolean" default="false"/>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:complexType name="SystemCommand">
		<xs:complexContent>
			<xs:extension base="AbstractCommand">
				<xs:sequence>
					<xs:choice>
						<xs:element name="shell" type="xs:string"/>
					</xs:choice>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:complexType name="UncompressCommand">
		<xs:complexContent>
			<xs:extension base="AbstractCommand">
				<xs:sequence>
					<xs:element name="destination">
						<xs:complexType>
							<xs:choice>
								<xs:element name="directory" type="xs:string" />
								<xs:element name="tempDirectory" />
							</xs:choice>
						</xs:complexType>
					</xs:element>
				</xs:sequence>
				<xs:attribute name="format" type="UncompressFormat" default="auto"/>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:simpleType name="UncompressFormat">
		<xs:restriction base="xs:string">
			<xs:enumeration value="auto" />
			<xs:enumeration value="zip" />
			<xs:enumeration value="tar" />
		</xs:restriction>
	</xs:simpleType>

	<xs:simpleType name="CommandOnErrorBehaviour">
		<xs:restriction base="xs:string">
			<xs:enumeration value="fail" />
			<xs:enumeration value="warn" />
			<xs:enumeration value="ignore" />
		</xs:restriction>
	</xs:simpleType>

	<xs:complexType name="Commands">
		<xs:sequence>
			<xs:element name="command" type="SystemCommand" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>

	<!-- Environments -->
	<xs:complexType name="Environment">
		<xs:sequence>
			<xs:element name="tibcoRoot" type="xs:string"/>
			<xs:element name="packagesDirectory" type="xs:string" minOccurs="0"/>
			<xs:element name="preInstallCommands" minOccurs="0" type="Commands"/>
			<xs:element name="products">
				<xs:complexType>
					<xs:sequence>
						<xs:choice minOccurs="0" maxOccurs="unbounded">
							<xs:element name="tibcoProduct" type="TIBCOProduct"/>
							<xs:element name="customProduct" type="CustomProduct"/>
						</xs:choice>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
			<xs:element name="postInstallCommands" minOccurs="0" type="Commands"/>
		</xs:sequence>
		<xs:attribute name="name" type="xs:string" use="required" />
		<xs:attribute name="ifExists" type="IfEnvironmentExistsBehaviour" default="fail" />
	</xs:complexType>

	<xs:simpleType name="IfEnvironmentExistsBehaviour">
		<xs:restriction base="xs:string">
			<xs:enumeration value="delete" />
			<xs:enumeration value="fail" />
			<xs:enumeration value="update" />
		</xs:restriction>
	</xs:simpleType>

	<xs:element name="environments">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="environment" minOccurs="1" maxOccurs="unbounded" type="Environment"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>

</xs:schema>